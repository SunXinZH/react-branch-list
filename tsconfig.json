{
    "compilerOptions": {
        "target": "es2021",
        "module": "commonjs",
        "lib": ["dom", "es2021"],
        "declaration": true,
        "declarationMap": true,
        "strict": true,
        "pretty": true,
        "sourceMap": true,
        "baseUrl": ".",
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "outDir": "./dist",
        "paths": {}
    },
    "include": ["src"],
    "exclude": [ "node_modules", "dist", "demos"]
}
